<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <center>
        <table border="1" bordercolor="black" cellspacing="0" cellpadding="30">
            <tr>
                <td>
                    <form action="/addPortfolio" method="post" enctype="multipart/form-data">
                        <div>
                            <b>Category:</b><br>
                            <select name="catagory">
                                <option selected="" disabled="">Select Category</option>
                                <% for(let i=0; i < values.length; i++) { %>
                                    <option value="<%= values[i]._id %>">
                                        <%= values[i].name %>
                                    </option>
                                    <%}%>
                            </select>
                            
                        </div><br>
                            <div>
                                <label>
                                    <b>Project Name:</b>
                                </label><br>
                                <input type="text" name="name" placeholder="Enter Your Name">
                                <br>
                                <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error2 %>
                                    </div>
                                    <% } %>
                            </div><br>
                            <div>
                                <label><b>Images:</b></label><br>
                                <input type="file" name="image" multiple><br><br>
                            </div><br>
                            <div>
                                <label><b>Title:</b></label><br>
                                <input type="text" name="title" placeholder="Enter Your Project Title"><br><br>
                                <br>
                                <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error3 %>
                                    </div>
                                    <% } %>
                            </div><br>
                            <div>
                                <label><b>URL:</b></label><br>
                                <input type="text" name="url" placeholder="For URL"><br><br>
                                <br>
                                <% if (typeof error5 !=='undefined' && error5.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error5 %>
                                    </div>
                                    <% } %>
                            </div><br>
                            <div>
                                <label><b>Date:</b></label><br>
                                <input type="date" name="date"><br><br>
                                <br>
                                <% if (typeof error4 !=='undefined' && error4.length> 0) { %>
                                    <div style="color: red;">
                                        <%= error4 %>
                                    </div>
                                    <% } %>
                            </div><br>
                            <div>
                                <button type="submit">ADD</button>
                            </div>
                    </form>
                </td>
            </tr>
        </table>
    </center>
</body>

</html>